# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                         controllers.Application.index

# Tasks resource
POST        /tasks                    controllers.Tasks.createTaskAction

POST        /task/:id/assignee        controllers.Tasks.claim(id)

POST        /task/:id/process         controllers.Tasks.start(id)

POST        /task/:id/done            controllers.Tasks.complete(id)

POST        /task/:id/release         controllers.Tasks.release(id)

POST        /task/:id/stop            controllers.Tasks.stop(id)

POST        /task/:id/skip            controllers.Tasks.skip(id)

GET         /task/:id                 controllers.Tasks.lookup(id)

GET         /tasks                    controllers.Tasks.list(user_id : Option[String])

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.at(path="/public", file)
