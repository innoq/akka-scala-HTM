# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                         controllers.Application.index

# Tasks resource
POST        /tasks                    controllers.TaskFlow.createTaskAction

POST        /task/:id/assignee        controllers.TaskFlow.claim(id)

POST        /task/:id/process         controllers.TaskFlow.start(id)

POST        /task/:id/done            controllers.TaskFlow.complete(id)

POST        /task/:id/release         controllers.TaskFlow.release(id)

POST        /task/:id/stop            controllers.TaskFlow.stop(id)

POST        /task/:id/skip            controllers.TaskFlow.skip(id)

GET         /task/:id                 controllers.TaskView.lookup(id)

GET         /tasks                    controllers.TaskView.list(user_id : Option[String])

GET         /browser                  controllers.Application.apiBrowser

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.at(path="/public", file)
